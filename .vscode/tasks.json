{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile firmware",
            "options": { "statusbar": { "label" : "$(check)" } },
            "type": "shell",
            "command": "make firmware",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Program firmware",
            "options": { "statusbar": { "label" : "$(arrow-down)" } },
            "type": "shell",
            "command": "make program",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Compile native",
            "options": { "statusbar": { "label" : "$(beaker)" } },
            "type": "shell",
            "command": "make native",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}