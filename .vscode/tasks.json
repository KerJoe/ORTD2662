{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile",
            "options": { "statusbar": { "label" : "$(check)" } },
            "type": "shell",
            "command": "make firmware",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Program",
            "options": { "statusbar": { "label" : "$(arrow-down)" } },
            "type": "shell",
            "command": "make program",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}